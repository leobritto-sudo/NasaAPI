<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="243dp"
            android:layout_height="172dp"
            android:contentDescription="@string/ImageView2"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/kindpng_424812" />

        <Button
            android:id="@+id/btnEarth"
            android:layout_width="236dp"
            android:layout_height="46dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="#171515"
            android:text="@string/btnEarth"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:textColor="#E4DEDE" />

        <Button
            android:id="@+id/btnEarthUser"
            android:layout_width="236dp"
            android:layout_height="46dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="#171515"
            android:text="@string/btnEarthUser"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="#E4DEDE" />

        <Button
            android:id="@+id/btnApod"
            android:layout_width="236dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="#171515"
            android:text="@string/btnApod"
            android:textColor="#E4DEDE" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="236dp"
            android:layout_height="46dp"
            android:background="@drawable/custom_button_red"
            android:text="@string/btnExit"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</ScrollView>